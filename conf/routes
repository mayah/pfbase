# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.action.IndexAction.get()

# Auth
GET     /auth/loginWithTwitter      controllers.action.auth.LoginWithTwitterAction.get()
GET     /auth/verifyForTwitter      controllers.action.auth.VerifyForTwitterAction.get()
GET     /auth/logout                controllers.action.auth.LogoutAction.get()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
