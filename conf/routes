# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.action.IndexAction.run()

# Auth
GET     /auth/loginWithTwitter      controllers.action.auth.LoginWithTwitterAction.run()
GET     /auth/verifyForTwitter      controllers.action.auth.VerifyForTwitterAction.run()
GET     /auth/logout                controllers.action.auth.LogoutAction.run()

# API
POST	/api/auth/login				controllers.api.user.UserLoginAPI.run()
POST	/api/auth/register			controllers.api.user.UserRegisterAPI.run()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
